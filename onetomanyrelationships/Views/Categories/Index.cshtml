@model IEnumerable<codefirstmvc.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

@foreach (var category in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h4>@category.CategoryName</h4>
            <p class="text-muted">@category.Description</p>

            @if (category.Products != null && category.Products.Any())
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in category.Products)
                        {
                            <tr>
                                <td>@product.Prodname</td>
                                <td>@product.price.ToString("C")</td>
                                <td>
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Proid" class="btn btn-info btn-sm">View</a>
                                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Proid" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Proid" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No products in this category yet.</p>
            }
        </div>
    </div>
}
